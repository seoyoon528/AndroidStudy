<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/topLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/keypadTableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/expressionTextView"
        tools:text="123151523672"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:gravity="end"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="end"
        android:textColor="#aaaaaa"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/keypadTableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="12345" />

    <TableLayout
        android:id="@+id/keypadTableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="21dp"
        android:paddingBottom="21dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        app:layout_constraintVertical_weight="1.5"
        android:shrinkColumns="*">

        <TableRow
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clearButton"
                android:background="@drawable/button_background"
                android:text = "C"
                android:textSize="24sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="clearButtonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text = "()"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:enabled="false"
                android:clickable="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonModulo"
                android:background="@drawable/button_background"
                android:text = "%"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDivider"
                android:background="@drawable/button_background"
                android:text = "÷"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>


        </TableRow>

        <TableRow
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                android:background="@drawable/button_background"
                android:text = "7"
                android:textSize="24sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                android:background="@drawable/button_background"
                android:text = "8"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button9"
                android:background="@drawable/button_background"
                android:text = "9"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonMulti"
                android:background="@drawable/button_background"
                android:text = "x"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>
        </TableRow>

        <TableRow
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:background="@drawable/button_background"
                android:text = "4"
                android:textSize="24sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:background="@drawable/button_background"
                android:text = "5"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:background="@drawable/button_background"
                android:text = "6"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonMinus"
                android:background="@drawable/button_background"
                android:text = "-"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>
        </TableRow>

        <TableRow
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:background="@drawable/button_background"
                android:text = "1"
                android:textSize="24sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:background="@drawable/button_background"
                android:text = "2"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:background="@drawable/button_background"
                android:text = "3"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonPlus"
                android:background="@drawable/button_background"
                android:text = "+"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>
        </TableRow>

        <TableRow
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/historyButton"
                android:src="@drawable/ic_baseline_access_time_24"
                android:background="@drawable/button_background"
                android:text = " "
                android:textSize="24sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="historyButtonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button0"
                android:background="@drawable/button_background"
                android:text = "0"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text = "."
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:enabled="false"
                android:clickable="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resultButton"
                android:background="@drawable/button_background_green"
                android:text = "="
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="resultButtonClicked"/>
        </TableRow>

    </TableLayout>

